<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RamosJorgeExamen2.MainPage">

    <ScrollView>


        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Bienvenidos a mi aplicacion de Jorge Ramos"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Image
                Source="representa.jpg"
                HeightRequest="185"
                Aspect="AspectFit"/>


            <Button
                x:Name="Chistes"
                Text="Chistes"
                Clicked="Chistes_Clicked"
                
                />
            <Button
                x:Name="About"
                Text="About"
                Clicked="About_Clicked"
                
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
